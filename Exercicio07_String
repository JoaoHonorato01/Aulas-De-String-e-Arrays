package exercicio07;

public class CrieUmaString123 {

	public static void main(String[] args) {
		 
        String minhaString = "teste 123";

        System.out.println("String original: " + minhaString);

        String SemEspacos = minhaString.trim();
        System.out.println("String sem espaços no início e no final: " + SemEspacos);

        String UmaPalavra = SemEspacos.replaceAll("\\s+", " ");
        System.out.println("String com espaço um entre as palavras: " + UmaPalavra);

	}

}
